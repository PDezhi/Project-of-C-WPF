            <TextBox Height="23" HorizontalAlignment="Left" Margin="183,80,0,0" Name="textBoxPrice" VerticalAlignment="Top" Width="222" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="183,0,0,149" Name="textBoxDescription" VerticalAlignment="Bottom" Width="222" />

            <Button Content="Submit" Height="23" HorizontalAlignment="Left" Margin="128,159,0,0" Name="Submit" VerticalAlignment="Top" Width="70" Click="Submit_Click" />
            <Button Content="Reset" Height="23" HorizontalAlignment="Left" Margin="204,159,0,0" Name="button2" VerticalAlignment="Top" Width="70" Click="button2_Click" />
            <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,159,115,0" Name="button3" VerticalAlignment="Top" Width="70" Click="button3_Click" />
        </Grid>
